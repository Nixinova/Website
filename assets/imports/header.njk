{%- macro head(text) -%}
    <span class="menu-header">{{ text }}</span>
{%- endmacro -%}
{%- macro subhead(text) -%}
    <span class="menu-subheader">{{ text }}</span>
{%- endmacro -%}

{%- macro entry(href, name) -%}
    <li><a href="{{ href }}">{{ name }}</a></li>
{%- endmacro -%}
{%- macro extentry(href, name) -%}
    <li><a class="external" href="{{ href }}">{{ name }}</a></li>
{%- endmacro -%}

<div id="header">

    <div class="menu-icon">
        <a href="javascript:toggleNav();">
            &#9776;
        </a>
    </div>

    <div id="menu-logo">
        <a href="/">
            <img src="/assets/images/logos/nixinova.png" alt="Nixinova">
        </a>
    </div id="menu-logo">

    <div id="header-search">
        <form action="/search">
            <div class="menu-icon" style="filter: brightness(0) invert(1);"><a href="/search">ðŸ”Ž</a></div>
            <input type="search" name="q" placeholder="Search..." id="header-search_bar">
            <button type="submit" class="hide"></button>
        </form>
    </div>

</div>

<nav class="hide">

    <div class="menu-section">
        {{ head('Projects') }}
        <div>
            {{ subhead('Wikis') }}
            <ul>
                {{ extentry('/redirect/reforj', 'Reforjopedia') }}
            </ul>
        </div>
        <div>
            {{ subhead('GitHub') }}
            <ul>
                {{ extentry('/redirect/novasheets', 'NovaSheets') }}
            </ul>
        </div>
        <div>
            {{ subhead('Games') }}
            <ul>
                {{ entry('/projects/mineo', 'Mineo') }}
            </ul>
        </div>
    </div>

    <div class="menu-section">
        {{ head('Tools') }}
        <div>
            {{ subhead('Minecraft Commands') }}
            <ul>
                {{ entry('/tools/minecraft/commands/give', '/give') }}
                {{ entry('/tools/minecraft/commands/summon', '/summon') }}
