            {{ subhead('APIs') }}
            <ul>
                {{ entry('/tools/lastfm/tags', 'Last.fm Tags') }}
                {{ entry('/tools/minecraft/api/versions', 'Minecraft Versions') }}
                {{ entry('/tools/minecraft/api/mojira', 'Mojira Versions') }}
                {{ entry('/tools/hytale/api/blog', 'Hytale Blog') }}
            </ul>
