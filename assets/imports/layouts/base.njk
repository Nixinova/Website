<!DOCTYPE html>
<html lang="en-NZ">
<head>
    <meta charset="utf-8">
    <title>{{ title }} &ndash; Nixinova</title>
    <meta name="viewport" content="initial-scale=1.0, width=device-width">
    <meta name="description" content="{{ description }}">
    <meta name="keywords" content="{{ keywords }}">{% if noindex %}
    <meta name="robots" content="noindex">{% endif %}
    <link rel="icon" href="/assets/images/favicon.ico">
    <link rel="novasheet" href="/assets/css/main.nss">{% if nss %}
    <link rel="novasheets" href="/assets/css/{{ nss }}">{% endif %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://novasheets.netlify.app/src/vers/novasheets-0.6.3.min.js"></script>{% if js %}
    <script src="/assets/js/tool-functions.js"></script>
    <script src="/assets/js/{{ js }}"></script>{% endif %}
    <script async src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" data-auto-replace-svg="nest"></script>
    <script>
        window.navIsVisible = false;
        const hideNav = () => {$('nav').addClass('hide'); navIsVisible = false;}
        const showNav = () => {$('nav').removeClass('hide'); navIsVisible = true;}
        const toggleNav = () => navIsVisible ? hideNav() : showNav();
        $(document).ready(() => {
            $('nav').css('opacity', 0).animate({ opacity: 1 }, 1000);
            $('i').css('visibility', 'visible');
        });
    </script>
</head>

<body>
    <header>{% include "header.html" %}</header>
    <main onclick="hideNav()">{{ content | safe }}</main>
    <footer>{% include "footer.html" %}</footer>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-83550713-1"></script>
    <script>window.dataLayer=window.dataLayer||[];function T(){dataLayer.push(arguments)}T('js',new Date());T('config','UA-83550713-1');</script>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js" data-ad-client="ca-pub-7730644887366759"></script>
</body>
</html>
