<script>
    var function_count = 0;
    $(document).ready(function () {
        $('#footer-other').html('<a href="/assets/js/bundle.js" title="bundle.js" target="_blank">View code</a>');
    });
</script>

<h2 class="upper">Image to Bundle Converter</h2>
<p>Converts images into bundles for Minecraft 1.17.</p>
<form action="javascript:submit()" id="input_form">

    <input id="input_image" type="file" accept="image/*" onchange="openFile(event)"><br>
    <img id="output_image" style="height:250px;"><br>
    <button onclick="submit()">Generate</button>

</form>

<div style="margin-top: auto;">

    <h3>
        Output
        <span style="font-size: 90%;" onclick="submit()">
            &nbsp;<i data-icon="sync"></i>
            &nbsp;<i data-icon="copy" id="copyCommand" onclick="copyCommand()"></i>
        </span>
    </h3>
    <div id="cmd-note" class="hide">
        <p>
            <strong>Note:</strong> This command is too long to be put in chat so it must be run from a command block:
            <output class="command">
                <span class="§7">/give</span>
                <span class="§b">@s</span>
                <span class="§e">minecraft:command_block</span>
                <span class="§a">1</span>
            </output>
        </p>
    </div>
</div>

<output id="generator-output" class="command">
    <span class="§7">/give</span>
    <span class="§b">@p</span>
    <span class="§e">minecraft:bundle{}</span>
</output>

